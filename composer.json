{
    "name": "meritoo/common-bundle",
    "description": "Common & useful classes, resources, extensions. Based on Symfony framework.",
    "type": "symfony-bundle",
    "license": "MIT",
    "authors": [
        {
            "name": "Meritoo.pl",
            "email": "github@meritoo.pl",
            "homepage": "http://www.meritoo.pl"
        }
    ],
    "require": {
        "php": "^8.2",
        "ext-intl": "*",
        "doctrine/annotations": "^2.0",
        "meritoo/common-library": "^1.3",
        "symfony/form": "^7.2",
        "symfony/framework-bundle": "^7.2",
        "symfony/twig-bundle": "^7.2",
        "symfony/validator": "^7.2"
    },
    "require-dev": {
        "friends-of-phpspec/phpspec-code-coverage": "^6.1",
        "friendsofphp/php-cs-fixer": "^3.8",
        "infection/infection": "^0.27.11",
        "php-coveralls/php-coveralls": "^2.5",
        "phpspec/phpspec": "^7.2",
        "phpstan/phpstan": "^1.6",
        "phpunit/phpunit": "^9.5",
        "sebastian/phpcpd": "^6.0",
        "squizlabs/php_codesniffer": "^3.6",
        "symfony/phpunit-bridge": "^7.2",
        "symfony/translation": "^7.2",
        "vimeo/psalm": "^5.26"
    },
    "autoload": {
        "psr-4": {
            "Meritoo\\CommonBundle\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Meritoo\\Test\\CommonBundle\\": "tests/"
        }
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "infection/extension-installer": true
        }
    }
}
