{
    "name": "meritoo/common-bundle",
    "description": "Common & useful classes, resources, extensions. Based on Symfony framework.",
    "type": "symfony-bundle",
    "license": "MIT",
    "authors": [
        {
            "name": "Meritoo.pl",
            "email": "github@meritoo.pl"
        }
    ],
    "require": {
        "php": "^7.2",
        "ext-intl": "*",
        "ext-pcre": "*",
        "doctrine/annotations": "^1.6",
        "meritoo/common-library": "^1.0.0",
        "symfony/framework-bundle": "^3.4|^4.1",
        "symfony/validator": "^4.1",
        "twig/extensions": "^1.5"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.14",
        "infection/infection": "^0.11.4",
        "php-coveralls/php-coveralls": "^2.1",
        "pdepend/pdepend": "^2.5",
        "phploc/phploc": "^5.0",
        "phpmd/phpmd": "^2.6",
        "phpstan/phpstan": "^0.11.1",
        "phpunit/phpunit": "^8.0",
        "sebastian/phpcpd": "^4.1",
        "squizlabs/php_codesniffer": "^2.9",
        "symfony/phpunit-bridge": "^4.1",
        "symfony/yaml": "^4.1",
        "vimeo/psalm": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "Meritoo\\CommonBundle\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Meritoo\\Test\\CommonBundle\\": "tests/"
        }
    },
    "config": {
        "sort-packages": true
    }
}
