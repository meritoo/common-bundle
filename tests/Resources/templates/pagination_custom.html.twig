{% apply spaceless %}
    <div class="pagination">
        {% if previous_url is not empty %}
            <div class="page-item go-to-previous">
                <a href="{{ previous_url }}">&leftarrow;</a>
            </div>
        {% endif %}

        {% for page_no, url in urls %}
            <div{% if current_page == page_no %} class="current"{% endif %}>
                <a href="{{ url }}">{{ page_no }}</a>
            </div>
        {% endfor %}

        {% if next_url is not empty %}
            <div class="page-item go-to-next">
                <a href="{{ next_url }}">&rightarrow;</a>
            </div>
        {% endif %}
    </div>
{% endapply %}
